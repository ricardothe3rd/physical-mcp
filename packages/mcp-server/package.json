{
  "name": "@chinchillaenterprises/physical-mcp",
  "version": "0.1.0",
  "description": "Safety-first MCP server for ROS2 robots - bridge AI agents to physical systems",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "physical-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "ros2",
    "robotics",
    "physical-ai",
    "safety",
    "robot-control",
    "ai-agents",
    "autonomous",
    "geofence",
    "emergency-stop"
  ],
  "author": "Chinchilla Enterprises",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ricardothe3rd/physical-mcp.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/index.d.ts"
}
