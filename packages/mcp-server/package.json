{
  "name": "@ricardothe3rd/physical-mcp",
  "version": "1.0.0",
  "description": "Safety-first MCP server for ROS2 robots - bridge AI agents to physical systems",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "physical-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "ros2",
    "robotics",
    "physical-ai",
    "safety",
    "robot-control",
    "ai-agents",
    "autonomous",
    "geofence",
    "emergency-stop"
  ],
  "author": "ricardothe3rd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ricardothe3rd/physical-mcp.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.56.1",
    "@vitest/coverage-v8": "^1.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "policies",
    "README.md",
    "LICENSE"
  ]
}
